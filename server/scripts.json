{
  "$schema": "https://deno.land/x/denon@2.5.0/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run app.ts",
      "desc": "run my app.ts file"
    }
  },
  "watcher": {
    "interval": 350,
    "exts": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "match": [
      "**/*.*"
    ],
    "skip": [
      "*/.git/*",
      "**/.json/*"
    ],
    "legacy": false
  },
  "allow": [
    "run",
    "net",
    "read",
    "write",
    "env",
    "sys"
  ]
}